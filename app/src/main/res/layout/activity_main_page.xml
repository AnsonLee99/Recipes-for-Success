<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">


    <LinearLayout
        android:id="@+id/main_display"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:background="#34FFC107"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="10dp"
        android:id="@+id/bottonNavBar"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:background="#FFF0A22C"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioGroup
            android:id="@+id/NavBar_Group"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#FFF0A22C"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <RadioButton
                android:id="@+id/grocery_tab_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="1.0"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/ic_notifications_black_24dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/menu_shopping_list"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/recipes_tab_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="1.0"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/ic_dashboard_black_24dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/menu_recipes"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/basket_tab_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="1.0"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/ic_home_black_24dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/menu_basket"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/social_tab_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="1.0"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/ic_dashboard_black_24dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/menu_social"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/profile_tab_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="1.0"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/ic_notifications_black_24dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/menu_profile"
                android:textColor="@android:color/white"
                android:textSize="12sp" />



        </RadioGroup>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>